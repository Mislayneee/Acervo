// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int       @id @default(autoincrement())
  nome            String
  email           String    @unique
  senha           String

  // PERFIL PÚBLICO (todos opcionais)
  role            String?
  country         String?
  affiliation     String?
  city            String?
  state           String?
  lattes          String?

  // Preferências
  showName        Boolean   @default(true)
  showAffiliation Boolean   @default(true)
  showContact     Boolean   @default(false)
  contactPublic   String?

  // Relação
  fossils         Fossil[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Fossil {
  id          Int       @id @default(autoincrement())
  especie     String
  familia     String
  periodo     String    // pode virar enum depois (Devoniano, etc.)
  localizacao String
  descricao   String?
  imageUrl    String?

  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([especie])
  @@index([familia])
  @@index([periodo])
  @@index([localizacao])
  @@index([createdAt])
}
