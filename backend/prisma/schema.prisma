// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int       @id @default(autoincrement())
  nome            String
  email           String    @unique
  senha           String

  // PERFIL PÚBLICO (todos opcionais p/ não travar migração)
  role            String?
  country         String?
  affiliation     String?
  city            String?
  state           String?
  lattes          String?

  // Preferências
  showName        Boolean   @default(true)
  showAffiliation Boolean   @default(true)
  showContact     Boolean   @default(false)
  contactPublic   String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
